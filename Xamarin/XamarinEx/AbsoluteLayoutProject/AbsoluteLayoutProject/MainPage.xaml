<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AbsoluteLayoutProject.MainPage">

    <AbsoluteLayout> <!-- AbsoluteLayout icerisinde bulunan elementleri oransal olarak siralayabilir-->
        <!-- 1/(n-1) -->
        
        <BoxView AbsoluteLayout.LayoutBounds="0,0,0.3333,0.2" 
                 BackgroundColor="Gray" 
                 AbsoluteLayout.LayoutFlags="XProportional,YProportional,SizeProportional"></BoxView>

        <BoxView AbsoluteLayout.LayoutBounds="0.5,0,0.333,0.2" 
                 BackgroundColor="Green" 
                 AbsoluteLayout.LayoutFlags="XProportional,YProportional,SizeProportional"></BoxView>

        <BoxView AbsoluteLayout.LayoutBounds="0,0.25,0.333,0.2" 
                 BackgroundColor="DarkKhaki" 
                 AbsoluteLayout.LayoutFlags="XProportional,YProportional,SizeProportional"></BoxView>

        <BoxView AbsoluteLayout.LayoutBounds="1,0,0.333,0.2" 
                 BackgroundColor="Red" 
                 AbsoluteLayout.LayoutFlags="XProportional,YProportional,SizeProportional"></BoxView>
    </AbsoluteLayout>

</ContentPage>
