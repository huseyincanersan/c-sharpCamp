<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListViewProject.Views.DetailedPage"
             Title="{Binding Car.Brand}">
    <ContentPage.Content>
        <StackLayout>
            <Image HeightRequest="200" WidthRequest="200" HorizontalOptions="CenterAndExpand" Aspect="AspectFit" Source="{Binding Car.ImgSource}"></Image>
            <Label Text="{Binding Car.Model}" FontAttributes="Bold" FontSize="Large"></Label>
            <Label Text="{Binding Car.Year}"  FontSize="Medium"></Label>
            <Label Text="{Binding Car.Details}"  FontSize="Small"></Label>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>