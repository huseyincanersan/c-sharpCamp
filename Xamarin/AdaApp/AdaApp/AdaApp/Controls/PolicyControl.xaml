<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AdaApp.Controls.PolicyControl">
  <ContentView.Content>
        <Frame BorderColor="Gray" CornerRadius="20" HasShadow="True"  VerticalOptions="CenterAndExpand" 
               Margin="15" Padding="15"
               >
            <StackLayout Orientation="Vertical">
                <StackLayout Orientation="Horizontal" VerticalOptions="Start">
                    <StackLayout VerticalOptions="Center" HorizontalOptions="StartAndExpand">
                        <Label x:Name="labelPolicyTip" Text="PolicyTip" FontSize="24" FontAttributes="Bold"></Label>
                        <Label x:Name="labelCompanyName" Text="CompanyName" FontSize="24" FontAttributes="Bold" TextColor="Gray"></Label>
                    </StackLayout>
                </StackLayout>
                
            </StackLayout>
        </Frame>
    </ContentView.Content>
</ContentView>